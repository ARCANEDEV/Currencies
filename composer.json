{
    "name":        "arcanedev/currencies",
    "description": "A framework agnostic currency conversion and formatting.",
    "keywords":    ["arcanedev", "laravel", "currencies", "currency", "money", "converter", "iso", "rates", "exchange"],
    "homepage":    "https://github.com/ARCANEDEV/Currencies",
    "license":     "MIT",
    "authors":     [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc",
            "role":     "Developer"
        }
    ],
    "require": {
        "php":               ">=5.6",
        "arcanedev/support": "~3.0"
    },
    "require-dev": {
        "phpunit/phpcov":    "~2.0|~3.0",
        "phpunit/phpunit":   "~4.0|~5.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanedev\\Currencies\\": "src/"
        },
        "files": ["helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanedev\\Currencies\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "testbench": "composer require --dev \"orchestra/testbench=~3.0\""
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
